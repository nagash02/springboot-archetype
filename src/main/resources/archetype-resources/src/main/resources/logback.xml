<configuration>
<!-- <if condition='isDefined("LOGSTASH_HOST")'> -->
<if condition='true'>
    <then>
       <!-- <property scope="context" name="LOGSTASH_HOST" value="${LOGSTASH_HOST:-localhost}"/> -->
       <property scope="context" name="LOGSTASH_HOST" value="192.168.1.228"/>
        <property scope="context" name="LOGSTASH_PORT" value="5000"/>
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
                <level>DEBUG</level>
            </filter>
            <layout class="ch.qos.logback.classic.PatternLayout">
                <Pattern>C/L %mdc %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
                </Pattern>
            </layout>
        </appender>
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>${LOGSTASH_HOST}:${LOGSTASH_PORT}</destination>
            <keepAliveDuration>5
                seconds
            </keepAliveDuration>
            <reconnectionDelay>1 second</reconnectionDelay>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
        </appender>
        <root level="DEBUG" additivity="false">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="LOGSTASH"/>
        </root>
    </then>
</if>
